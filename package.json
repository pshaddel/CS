{
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.12",
    "ts-jest": "^27.1.1",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "jest": "^27.4.3"
  },
  "scripts": {
    "test": "jest --silent --forceExit --detectOpenHandles --runInBand",
    "test:cov": "jest --forceExit --coverage --detectOpenHandles --runInBand",
    "test:watch": "jest --detectOpenHandles --runInBand --watchAll",
    "test:badges": "jest --coverage --coverageReporters='json-summary' && jest-coverage-badges"
  }
}
