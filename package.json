{
	"devDependencies": {
		"@types/jest": "^27.0.3",
		"@types/node": "^16.11.12",
		"@typescript-eslint/eslint-plugin": "^5.6.0",
		"eslint": "^8.4.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"prettier": "^2.5.1",
		"ts-jest": "^27.1.1",
		"typescript": "^4.5.2",
		"@typescript-eslint/parser": "^5.6.0"
	},
	"dependencies": {
		"jest": "^27.4.4"
	},
	"scripts": {
		"test": "jest --silent --forceExit --detectOpenHandles --runInBand",
		"test:cov": "jest --forceExit --coverage --detectOpenHandles --runInBand",
		"test:watch": "jest --detectOpenHandles --runInBand --watchAll",
		"test:badges": "jest --coverage --coverageReporters='json-summary' && jest-coverage-badges",
		"prettier": "prettier --write .",
		"prettier:ci": "prettier --check .",
		"lint": "eslint . --fix --ext .ts"
	}
}
